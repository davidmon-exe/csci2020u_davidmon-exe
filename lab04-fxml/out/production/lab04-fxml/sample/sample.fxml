<?xml version="1.0" encoding="UTF-8"?>
<?import org.apache.commons.validator.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txUserName"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Full Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txFullName"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="E-mail:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="txEmail"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Phone #:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="txPhoneNum"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Date of Birth:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="txDOB"
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="0" GridPane.rowIndex="7">
          <Button text="Register"
                  onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@mystyle.css"/>
    </stylesheets>


</GridPane>