<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane fx:controller="sample.Controller"
    xmlns:fx="http://javafx.com/fxml"  prefHeight="350" prefWidth="420">

    <Label text="Username:" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="25.0"/>
    <TextField id="txUserName" fx:id="txUserName" promptText="Please give a Username" prefWidth="300"
           AnchorPane.topAnchor="45.0" AnchorPane.leftAnchor="125.0"/>
    <Text fx:id="userErr" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="450.0"/>

    <Label text="Password:" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="25.0"/>
    <PasswordField id="passwordField" fx:id="passwordField" promptText="Password must be minimum of 8 characters"
            AnchorPane.topAnchor="95.0" AnchorPane.leftAnchor="125.0" prefWidth="300"/>
    <Text fx:id="passErr" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="450.0"/>

    <Label text="Full Name:" AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="25.0"/>
    <TextField id="txFullName" fx:id="txFullName" promptText="Please give first and last name"
            AnchorPane.topAnchor="145.0" AnchorPane.leftAnchor="125.0" prefWidth="300"/>
    <Text fx:id="nameErr" AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="450.0"/>

    <Label text="E-mail:" AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="25.0"/>
    <TextField id="txEmail" fx:id="txEmail" promptText="Email must be in format 'name@emailaddress.com'"
           AnchorPane.topAnchor="195.0" AnchorPane.leftAnchor="125.0" prefWidth="300"/>
    <Text fx:id="emailErr" AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="450.0"/>

    <Label text="Phone #:" AnchorPane.topAnchor="250.0" AnchorPane.leftAnchor="25.0"/>
    <TextField id="txPhoneNum" fx:id="txPhoneNum" promptText="Phone# must be valid"
            AnchorPane.topAnchor="245.0" AnchorPane.leftAnchor="125.0" maxWidth="200"/>
    <Text fx:id="phoneErr" AnchorPane.topAnchor="250.0" AnchorPane.leftAnchor="450.0"/>

    <Label text="Date of Birth:" AnchorPane.topAnchor="300.0" AnchorPane.leftAnchor="25.0"/>
    <DatePicker id="datePicker" fx:id="datePicker"
            AnchorPane.topAnchor="295.0" AnchorPane.leftAnchor="125.0"/>
    <Text fx:id="dateErr" AnchorPane.topAnchor="300.0" AnchorPane.leftAnchor="450.0"/>

    <HBox spacing="10" alignment="bottom_right"
          AnchorPane.topAnchor="350.0" AnchorPane.leftAnchor="125.0">
          <Button id="regBtn" text="Register" onAction="#handleSubmitButtonAction"/>
    </HBox>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</AnchorPane>